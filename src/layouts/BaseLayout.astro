---
import "../assets/styles/global.css";
import { LiquidGradientBackground } from "../components/LiquidGradientBackground";
import { SiteNoticeBanner } from "../components/SiteNoticeBanner";

const {
  title = "Home",
  description = "Technology solutions that build, scale, and educate.",
} = Astro.props;

---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <title>{title} | AmbraVate</title>
    <meta
      name="description"
      content={description ?? 'Technology solutions that build, scale, and educate.'}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <slot name="head" />
  </head>

  <body class="relative overflow-x-hidden bg-black pt-12" style="scroll-behavior: smooth; scroll-snap-type: y mandatory;">
    <SiteNoticeBanner client:load />
    <LiquidGradientBackground client:only="react" />

    <div class="relative z-10">
    <slot />
    </div>
  
  </body>
</html>